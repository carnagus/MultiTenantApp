@using MultiTenantApp.Application.Travels.Queries.ViewModels
@model MultiTenantApp.Application.Travels.Queries.ViewModels.TravelsListViewModel

@{
    ViewData["Title"] = "Index";
    var travelModel = new TravelViewModel();
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => travelModel.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => travelModel.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Travels) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (item.IsEditable)
                {
                    @Html.ActionLink("Edit", "Update", new { id=item.Id}) <span> |</span>
                }
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
